# Database Configuration
MONGODB_URI_LOCAL="mongodb://root:example@localhost:27017/test-cria?authSource=admin"

# Server Configuration
PORT=8010
NODE_ENV=development

# API Documentation
API_DOCUMENTATION="http://localhost:8010/api"

# Authentication Configuration
JWT_SECRET="secret"
ACCESS_TOKEN_VALIDITY_DURATION_IN_SEC="3600s"
